<div class="col-4 m-5">
  <h1>New game</h1>
  <div class="d-flex">
    <% @letters.each do |letter| %>
    <p class="letter btn btn-primary m-1"><%= letter %></p>
    <% end %>
  </div>

  <div>
    <label for="text">What's the longest word you can find?</label>
    <form action="/score" method="post" data-turbo="false" class="form-control">
      <input type="text" name="word" class="form-control">
      <input type="submit" value="Play!" class="btn btn-primary mb-3">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>
